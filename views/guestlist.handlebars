<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{msg}}</h1>
        <h2>Add Guest</h2>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group-event">
            {{!-- Event Name Input--}}
            <div>
              <label for="example-text">Guest First Name</label>
              <input type="text" id="guest-firstname" class="form-control" aria-describedby="example-text" placeholder="Enter First Name">
            </div>

            <div>
              <label for="example-text">Guest Last Name</label>
              <input type="text" id="guest-lastname" class="form-control" aria-describedby="example-text" placeholder="Enter Last Name">
            </div>
            {{!-- Event Description Input --}}
            <div>
              <label for="guest-email">Guest Email</label>
              <textarea class="form-control" id="guest-email" aria-describedby="example-description" placeholder="Enter Guest Email"></textarea>
            </div>
            {{!-- Event Type Input--}}
            <div>
              <label for="example-text">Guest's Organization</label>
              <input type="text" id="guest-org" class="form-control" aria-describedby="example-text"
                placeholder="Enter Guest's Organization">
            </div>

            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck">
                    <label class="form-check-label" for="gridCheck">VIP</label>
                </div>
            </div>

            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck">
                    <label class="form-check-label" for="gridCheck">Checked In</label>
                </div>
            </div>

  
            <button id="submit" class="btn btn-primary float-right">Add New Guest</button>
          </div>
        </form>

        {{!-- list of User's Events --}}
        <h3>Your Guests:</h3>
        <ul id="event-list" class="list-group">
          {{#each guests}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="guests/{{this.id}}">{{this.name}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>
